<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="jasdip.a4443project.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/text_mode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_mode"
                android:textSize="20dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/buttonMode"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Joystick"
                android:layout_alignParentRight="true"
                android:onClick="toggleMode" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/target_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/target_size"
                android:textSize="20dp"
                android:padding="10dp" />

            <Button
                android:id="@+id/buttonSize"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Small"
                android:layout_alignParentRight="true"
                android:onClick="toggleSize" />
        </RelativeLayout>

        <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
            <TextView
                android:id="@+id/text_participant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Participant"
                android:textSize="20dp"
                android:padding="10dp" />

            <EditText
                android:id="@+id/participant_name"
                android:layout_height="wrap_content"
                android:layout_width="150dp"
                android:inputType="text"
                android:layout_alignParentRight="true" />
         </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/buttonStart"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="Start"
                android:layout_centerInParent="true"
                android:onClick="startGame"/>

            <ToggleButton
                android:id="@+id/practice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="Practice"
                android:textOff="Practice"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
